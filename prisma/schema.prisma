// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement()) @map("user_id")
  name        String
  password    String
  email       String      @unique
  cpf         String      @unique
  phone       String

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}


model Material {
  id             Int       @id @default(autoincrement())
  name           String
  type           String
  pollutionLevel Float
  weight         Float
  rewardPoints   Int
  amount         Float

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Company {
  id        Int      @id @default(autoincrement()) @map("company_id")
  cnpj      String   @unique
  address   String
  area      String
  name      String
  imageUrl  String
  isActive  Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


// ainda não remova essa tabela
model Transporte {
  id            Int @id @default( autoincrement() )       
  dataSaida     DateTime  
  dataChegada   DateTime 
  motorista     String    
  status        String

  createdAt DateTime 
  updatedAt DateTime 
}

model Machine {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  status    String
  capacity  Float
  location  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

