generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
//Rafaela
model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  pass      String
  name      String
  cpf       String    @unique
  phone     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relações
  materials Material[]     @relation("UserMaterials") // um usuário pode descartar vários materiais
  descartes Descarte[]
}
//João
model Material {
  id             Int       @id @default(autoincrement())
  name           String
  type           String
  pollutionLevel Float
  weight         Float
  rewardPoints   Int
  amount         Float
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relações
  users     User[]     @relation("UserMaterials")
  machines  Machine[]
}
// Giovanna
model Enterprise {
  id        Int      @id @default(autoincrement())
  cnpj      String   @unique
  adress    String
  area      String
  name      String
  urlImage  String
  isActive  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relações
  machines Machine[]
}

model Machine {
  id          Int       @id @default(autoincrement())
  name        String
  type        String
  status      String
  amoutn Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // FKs
  materialId   Int
  enterpriseId Int

  // Relações
  material   Material   @relation(fields: [materialId], references: [id])
  enterprise Enterprise @relation(fields: [enterpriseId], references: [id])
  descartes  Descarte[]
}

// João
model Descarte {
  userId    Int
  machineId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // PK composta
  @@id([userId, machineId])

  // Relações
  user    User    @relation(fields: [userId], references: [id])
  machine Machine @relation(fields: [machineId], references: [id])
}
